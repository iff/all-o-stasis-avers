{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "src/",
        "outDir": "dist/js/",
        "jsx": "react",
        "strict": true
    },
    "include": [
        "src/**/*"
    ]
}
